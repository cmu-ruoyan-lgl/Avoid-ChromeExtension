{
  "manifest_version": 3,
  "name": "Avoid",
  "version": "1.0",
  "description": "阻止访问指定网站",
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "notifications",
    "downloads",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "file://*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}

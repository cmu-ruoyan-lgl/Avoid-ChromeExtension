{
  "manifest_version": 3,
  "name": "Avoid",
  "version": "1.0",
  "description": "阻止访问指定网站",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "tabs",
    "storage",
    "webNavigation",
    "notifications",
    "downloads",
    "unlimitedStorage"
  ],
  "host_permissions": [
    "file://*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}
